@model RegisterUserViewModel
@{
    Layout = "LoginLayout";
    ViewData["Title"] = "Регистрация нового пользователя";
}

<div class="reg__registration">
    <h2 class="reg__title">Регистрация нового пользователя</h2>
    <form asp-action="Register" asp-antiforgery="true" id="form">
        <div asp-validation-summary="ModelOnly" class="text-danger"> </div>


        <p class="reg__p">Ваш email: @Model.Email</p>

        <p class="reg__p">
            <input asp-for="Email" placeholder="Секретный код админа (если есть)" class="" value="@Model.Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </p>

        @*<p class="reg__p">
            <input asp-for="AdminRolePassword" placeholder="Секретный код админа (если есть)" class="" />
            <span asp-validation-for="AdminRolePassword" class="text-danger"></span>
        </p>*@

        <p class="reg__p">
            <input asp-for="UserName" placeholder="Логин" class="add_input" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </p>

        <p class="reg__p">
            <input asp-for="FirstName" placeholder="Имя" class="add_input" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </p>

        <p class="reg__p">
            <input asp-for="SecondName" placeholder="Фамилия" class="add_input" />
            <span asp-validation-for="SecondName" class="text-danger"></span>
        </p>

        <p class="reg__p">
            <input asp-for="Password" placeholder="Пароль" class="add_input" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </p>

        <p class="reg__p">
            <input asp-for="PasswordConfirm" placeholder="Подтверждение пароля" class="add_input" />
            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
        </p>

        <p class="reg__p">
            <span>
                <a href="/doc/Правила сайта.docx" download class="color_dark_dark_blue">Наша политика</a> 
                <input type="checkbox" onchange='CheckInputChange(this);' asp-for="IsConfirmed"/>
            </span>
            @*<span asp-validation-for="IsConfirmed" class="text-danger"></span>*@
        </p>

        <div class="reg__text-center">
            <button type="submit" class="btn btn-default reg__btn" id="RegButtn" disabled>Зарегистрироваться</button>
        </div>

    </form>
</div>

