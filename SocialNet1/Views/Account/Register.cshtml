@model RegisterUserViewModel
@{
    Layout = "LoginLayout";
    ViewData["Title"] = "Регистрация нового пользователя";
}

<div class="reg__registration">
    <h2 class="reg__title">Регистрация нового пользователя</h2>
    <form asp-action="Register" asp-antiforgery="true">
        <div asp-validation-summary="ModelOnly" class="text-danger"> </div>


        <p class="reg__p">@Model.Email</p>

        <p class="reg__p">
            <input asp-for="Email" placeholder="Секретный код админа (если есть)" class="" value="@Model.Email"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </p>

        <p class="reg__p">
            <input asp-for="AdminRolePassword" placeholder="Секретный код админа (если есть)" class="" />
            <span asp-validation-for="AdminRolePassword" class="text-danger"></span>
        </p>

        <p class="reg__p">
            <input asp-for="UserName" placeholder="Логин" class="" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </p>

        <p class="reg__p">
            <input asp-for="FirstName" placeholder="Имя" class="" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </p>

        <p class="reg__p">
            <input asp-for="SecondName" placeholder="Фамилия" class="" />
            <span asp-validation-for="SecondName" class="text-danger"></span>
        </p>

        <p class="reg__p">
            <input asp-for="Password" placeholder="Пароль" class="" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </p>

        <p class="reg__p">
            <input asp-for="PasswordConfirm" placeholder="Подтверждение пароля"
                   class="" />
            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
        </p>

        <div class="reg__text-center">
            <button type="submit" class="btn btn-default reg__btn">Зарегистрироваться</button>
        </div>

    </form>
</div>

